<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>JavaStreamVideo</groupId>
  <artifactId>JavaStreamVideo</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <description>This is a project that can create a server and client to stream video</description>
  <build>
    <sourceDirectory>src</sourceDirectory>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.8.1</version>
        <configuration>
          <release>11</release>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.3.0</version>
        <executions>
          <execution>
            <id>ClientBuild</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>client.ClientMain</mainClass>
                </transformer>
              </transformers>
              <outputFile>StreamClient.jar</outputFile>
            </configuration>
          </execution>
          <execution>
            <id>ServerBuild</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>server.ServerMain</mainClass>
                </transformer>
              </transformers>
              <outputFile>StreamServer.jar</outputFile>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.openjfx</groupId>
        <artifactId>javafx-maven-plugin</artifactId>
        <version>0.0.8</version>
        <configuration>
          <mainClass>client.StreamClient</mainClass>
          <mainClass>src.server.Servermain</mainClass>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
